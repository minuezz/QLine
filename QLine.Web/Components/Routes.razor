@using Microsoft.AspNetCore.Components.Authorization
@using QLine.Web.Components.Layout

<CascadingAuthenticationState>
    <Router AppAssembly="@typeof(App).Assembly">
        <Found Context="routeData">
            <ErrorBoundary @ref="_errorBoundary">
                <ChildContent>
                    <RouteView RouteData="@routeData" DefaultLayout="@typeof(MainLayout)" />
                    <FocusOnNavigate RouteData="@routeData" Selector="h1" />
                </ChildContent>

                <ErrorContent Context="ex">
                    <LayoutView Layout="@typeof(MainLayout)">
                        <div class="container mt-5">
                            <div class="alert alert-danger shadow" role="alert">
                                <h4 class="alert-heading">Error occured</h4>
                                <p>Unfortunately, something went wrong while loading this page.</p>
                                <hr>
                                <p class="mb-0">
                                    <button class="btn btn-outline-danger" @onclick="Recover">
                                        Reload
                                    </button>
                                    <a href="/" class="btn btn-link">Back to home page</a>
                                </p>

                                <details class="mt-3 text-muted">
                                    <summary>Technical details</summary>
                                    <pre class="mt-2 small">@ex.Message</pre>
                                    <pre class="small" style="max-height: 200px; overflow: auto;">@ex.StackTrace</pre>
                                </details>
                            </div>
                        </div>
                    </LayoutView>
                </ErrorContent>
            </ErrorBoundary>
        </Found>

        <NotFound>
            <PageTitle>Not found</PageTitle>
            <LayoutView Layout="@typeof(MainLayout)">
                <div class="container mt-5 text-center">
                    <h3>404</h3>
                    <p role="alert">Sorry, there is nothing at this address.</p>
                </div>
            </LayoutView>
        </NotFound>
    </Router>
</CascadingAuthenticationState>

@code {
    private ErrorBoundary? _errorBoundary;

    private void Recover()
    {
        _errorBoundary?.Recover();
    }
}